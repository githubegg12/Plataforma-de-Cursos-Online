@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 id="courseTitle" class="mb-1">Loading...</h2>
            <p class="text-muted mb-0">Course Details</p>
        </div>
        <a href="/Courses" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>
    
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-journal-text me-2"></i>Lessons
            </h5>
            <button class="btn btn-primary btn-sm" onclick="showAddLessonModal()">
                <i class="bi bi-plus-lg me-1"></i> Add Lesson
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4" style="width: 80px;">Order</th>
                            <th>Title</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="lessonsTableBody">
                        <!-- Lessons will be loaded here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Lesson Modal -->
<div class="modal fade" id="lessonModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lessonModalTitle">Add Lesson</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="lessonForm">
                    <input type="hidden" id="lessonId">
                    <input type="hidden" id="lessonCourseId">
                    <div class="mb-3">
                        <label for="lessonTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="lessonTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="lessonOrder" class="form-label">Order</label>
                        <input type="number" class="form-control" id="lessonOrder" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveLesson()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/courses.js"></script>
    <script src="~/js/lessons.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            const urlParts = window.location.pathname.split('/');
            const id = urlParts[urlParts.length - 1];
            loadCourseDetails(id);
        });
    </script>
}
